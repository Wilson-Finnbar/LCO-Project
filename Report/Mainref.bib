	doi = {10.1111/j.1365-2966.2010.16373.x},
	eprint = {https://academic.oup.com/mnras/article-pdf/404/3/1203/18692252/mnras0404-1203.pdf},
	issn = {0035-8711},
	journal = {Monthly Notices of the Royal Astronomical Society},
	month = {05},
	number = {3},
	pages = {1203-1214},
	title = {{Accreted versus in situ Milky Way globular clusters}},
	url = {https://doi.org/10.1111/j.1365-2966.2010.16373.x},
