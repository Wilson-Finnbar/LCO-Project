	issn = {0035-8711},
	journal = {Monthly Notices of the Royal Astronomical Society},
	month = {06},
	number = {1},
	pages = {806-825},
	title = {{Stellar graveyards: clustering of compact objects in globular clusters NGC 3201 and NGC 6397}},
	url = {https://doi.org/10.1093/mnras/stac1337},
