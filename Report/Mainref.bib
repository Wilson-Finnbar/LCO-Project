	journal = {The Astronomical Journal},
	month = {jan},
	number = {2},
	pages = {476},
	publisher = {The American Astronomical Society},
	title = {THE ACS SURVEY OF GALACTIC GLOBULAR CLUSTERS. VIII. EFFECTS OF ENVIRONMENT ON GLOBULAR CLUSTER GLOBAL MASS FUNCTIONS},
	url = {https://dx.doi.org/10.1088/0004-6256/139/2/476},
	volume = {139},
	year = {2010},
